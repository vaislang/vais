    puts_ptr("=== Testing Deque with Option ===")

    dq := deque_new()
    dq.push_back(10)
    dq.push_back(20)
    dq.push_front(5)

    # Test front_opt
    front := dq.front_opt()
    I front.is_some() == 1 {
        puts_ptr("Deque.front_opt() = Some(")
        print_i64(front.unwrap_or(0))
        puts_ptr(")")
    }

    # Test back_opt
    back := dq.back_opt()
    I back.is_some() == 1 {
        puts_ptr("Deque.back_opt() = Some(")
        print_i64(back.unwrap_or(0))
        puts_ptr(")")
    }

    # Test pop_front_opt
    pop := dq.pop_front_opt()
    I pop.is_some() == 1 {
        puts_ptr("Deque.pop_front_opt() = Some(")
        print_i64(pop.unwrap_or(0))
        puts_ptr(")")
