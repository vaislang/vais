    # Test get_opt
    get_result := dq.get_opt(0)
    I get_result.is_some() == 1 {
        puts_ptr("Deque.get_opt(0) = Some(")
        print_i64(get_result.unwrap_or(0))
        puts_ptr(")")
    }

    dq.drop()
    puts_ptr("")
    0
}

# Test String with Option
F test_string() -> i64 {
    puts_ptr("=== Testing String with Option ===")

    s := str_from("Hello")

    # Test char_at_opt - valid index
    ch := s.char_at_opt(1)
    I ch.is_some() == 1 {
        puts_ptr("String.char_at_opt(1) = Some(")
        print_i64(ch.unwrap_or(0))
        puts_ptr(") [ASCII for 'e']")
    }

    # Test char_at_opt - invalid index
    ch2 := s.char_at_opt(100)
    I ch2.is_none() == 1 {
        puts_ptr("String.char_at_opt(100) = None (correct)")
    }

    s.drop()
    puts_ptr("")
    0
}

# Test PriorityQueue with Option
F test_priority_queue() -> i64 {
    puts_ptr("=== Testing PriorityQueue with Option ===")

    pq := PriorityQueue.with_capacity(8)
    pq.push(50)
    pq.push(20)
    pq.push(30)
    pq.push(10)

    # Test peek_opt
    peek := pq.peek_opt()
    I peek.is_some() == 1 {
        puts_ptr("PriorityQueue.peek_opt() = Some(")
        print_i64(peek.unwrap_or(0))
        puts_ptr(") [minimum element]")
    }

    # Test pop_opt
    pop1 := pq.pop_opt()
    I pop1.is_some() == 1 {
        puts_ptr("PriorityQueue.pop_opt() = Some(")
        print_i64(pop1.unwrap_or(0))
        puts_ptr(")")
    }

    pop2 := pq.pop_opt()
    I pop2.is_some() == 1 {
        puts_ptr("PriorityQueue.pop_opt() = Some(")
        print_i64(pop2.unwrap_or(0))
        puts_ptr(")")
    }

    pq.drop()
    puts_ptr("")
    0
}

