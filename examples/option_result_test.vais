# Test Option and Result error handling improvements

# Test Vec with Option
F test_vec() -> i64 {
    puts_ptr("=== Testing Vec with Option ===")

    v := vec_new()
    v.push(10)
    v.push(20)
    v.push(30)

    # Test get_opt - valid index
    result := v.get_opt(1)
    I result.is_some() == 1 {
        puts_ptr("Vec.get_opt(1) = Some(")
        print_i64(result.unwrap_or(0))
        puts_ptr(")")
    }

    # Test get_opt - invalid index
    result2 := v.get_opt(10)
    I result2.is_none() == 1 {
        puts_ptr("Vec.get_opt(10) = None (correct)")
    }

    # Test pop_opt
    pop_result := v.pop_opt()
    I pop_result.is_some() == 1 {
        puts_ptr("Vec.pop_opt() = Some(")
        print_i64(pop_result.unwrap_or(0))
        puts_ptr(")")
    }

    v.drop()
    puts_ptr("")
    0
}

# Test HashMap with Option
