    map.set(3, 300)

    # Test get_opt - existing key
    result := map.get_opt(2)
    I result.is_some() == 1 {
        puts_ptr("HashMap.get_opt(2) = Some(")
        print_i64(result.unwrap_or(0))
        puts_ptr(")")
