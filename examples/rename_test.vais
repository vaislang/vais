# Test file for LSP rename functionality

# Structure with fields
S Point {
    x: i64,
    y: i64
}

# Function using the structure
F create_point(a: i64, b: i64) -> Point {
    R Point { x: a, y: b }
}

# Function with local variables
F calculate(value: i64) -> i64 {
    result := value * 2
    temp := result + 10
    R temp
}

# Enum definition
E Color {
    Red,
    Green,
    Blue
}

# Function using enum
F get_color_value(color: Color) -> i64 {
    M color {
        Red => 1,
        Green => 2,
        Blue => 3
    }
}

# Main function
F main() -> i64 {
    point := create_point(10, 20)
    x_val := point.x
    computed := calculate(x_val)

    my_color := Red
    color_val := get_color_value(my_color)

    R computed + color_val
}
