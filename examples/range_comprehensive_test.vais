    # Various range forms
    r1 := 0..10        # Range<i64> - exclusive
    r2 := 1..=5        # Range<i64> - inclusive

    # Ranges with different integer types
    r3 := 0..100
    r4 := 50..200

    0
}

# Test 2: Range type inference in different contexts
F test_type_inference() -> i64 {
    # Type inference from literals
    r1 := 0..10        # i64

    # Type inference from variables
    start := 5
    end := 15
    r2 := start..end   # Range<i64>

    0
}

# Test 3: Ranges in function parameters (when codegen supports it)
# For now, just test that the types are accepted
F accept_range_param() -> i64 {
    r := 0..10
    0
}

# Test 4: Range in variable declarations
F test_range_vars() -> i64 {
