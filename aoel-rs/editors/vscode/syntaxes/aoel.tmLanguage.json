{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "AOEL",
  "scopeName": "source.aoel",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.aoel",
          "match": "//.*$"
        },
        {
          "name": "comment.block.aoel",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.aoel",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.aoel",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.aoel",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.aoel",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.aoel",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.aoel",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.aoel",
          "match": "\\b(if|else|let|match)\\b"
        },
        {
          "name": "keyword.other.aoel",
          "match": "\\b(mod|use|type|pub)\\b"
        },
        {
          "name": "constant.language.aoel",
          "match": "\\b(true|false|nil)\\b"
        },
        {
          "name": "keyword.operator.error.aoel",
          "match": "\\berr\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.collection.aoel",
          "match": "\\.@|\\.\\?|\\./\\+|\\./\\*|\\./min|\\./max|\\./and|\\./or"
        },
        {
          "name": "keyword.operator.comparison.aoel",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.aoel",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.aoel",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.assignment.aoel",
          "match": "="
        },
        {
          "name": "keyword.operator.range.aoel",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.arrow.aoel",
          "match": "->"
        },
        {
          "name": "keyword.operator.ternary.aoel",
          "match": "\\?|:"
        },
        {
          "name": "keyword.operator.self-call.aoel",
          "match": "\\$"
        },
        {
          "name": "keyword.operator.lambda-param.aoel",
          "match": "\\b_\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.aoel",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.aoel",
          "match": "\\b(Int|Float|String|Bool|Unit|Any|Never)\\b"
        },
        {
          "name": "support.type.aoel",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.aoel",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
