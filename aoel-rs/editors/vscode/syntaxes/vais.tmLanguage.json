{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Vais",
  "scopeName": "source.vais",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.vais",
          "match": "//.*$"
        },
        {
          "name": "comment.block.vais",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.vais",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.vais",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.vais",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.vais",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.vais",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.hex.vais",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.vais",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.integer.vais",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vais",
          "match": "\\b(if|then|else|match|for|in|while|return|break|continue|try|catch|throw)\\b"
        },
        {
          "name": "keyword.declaration.vais",
          "match": "\\b(let|mut|fn|type|enum|struct|mod|use|import|export|pub|async|await|spawn)\\b"
        },
        {
          "name": "keyword.operator.vais",
          "match": "\\b(and|or|not|is|as)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.vais",
          "match": "->|=>|<-"
        },
        {
          "name": "keyword.operator.pipeline.vais",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.collection.vais",
          "match": "\\.@|\\.\\?|\\./|\\.\\|\\|@|\\.\\|\\|\\?|\\.\\|\\|/"
        },
        {
          "name": "keyword.operator.comparison.vais",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.vais",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.vais",
          "match": "\\+|-|\\*|/|%|\\^"
        },
        {
          "name": "keyword.operator.range.vais",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.optional.vais",
          "match": "\\?|!"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.vais",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.builtin.vais",
          "match": "\\b(print|println|len|first|last|reverse|concat|push|pop|map|filter|reduce|fold|zip|flatten|sort|unique|sum|product|min|max|abs|sqrt|pow|sin|cos|tan|log|exp|floor|ceil|round|upper|lower|trim|split|join|replace|contains|starts_with|ends_with|int|float|str|bool|type_of|range|enumerate|random|time_now|sleep)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.vais",
          "match": "\\b(Int|Float|String|Bool|Void|Any)\\b"
        },
        {
          "name": "support.type.collection.vais",
          "match": "\\b(Array|Map|Set|Option|Result|Future|Channel)\\b"
        },
        {
          "name": "entity.name.type.vais",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.vais",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.vais",
          "match": "\\b(nil|none|void)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.parameter.vais",
          "match": "\\b_\\b"
        },
        {
          "name": "variable.other.vais",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
