{
  "name": "vais-lang",
  "displayName": "Vais Language Support",
  "description": "Syntax highlighting, LSP support, and snippets for Vais programming language",
  "version": "0.1.0",
  "publisher": "vais",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets",
    "Formatters"
  ],
  "keywords": [
    "vais",
    "functional",
    "programming language"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vais-lang/vais"
  },
  "activationEvents": [
    "onLanguage:vais"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "vais",
        "aliases": ["Vais", "vais"],
        "extensions": [".vais"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/vais-light.png",
          "dark": "./icons/vais-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "vais",
        "scopeName": "source.vais",
        "path": "./syntaxes/vais.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "vais",
        "path": "./snippets/vais.json"
      }
    ],
    "configuration": {
      "title": "Vais",
      "properties": {
        "vais.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Vais Language Server"
        },
        "vais.lsp.path": {
          "type": "string",
          "default": "vais-lsp",
          "description": "Path to Vais LSP server executable"
        },
        "vais.format.onSave": {
          "type": "boolean",
          "default": false,
          "description": "Format Vais files on save"
        },
        "vais.format.indentWidth": {
          "type": "number",
          "default": 4,
          "description": "Indentation width for formatting"
        },
        "vais.run.jit": {
          "type": "boolean",
          "default": false,
          "description": "Use JIT compilation when running Vais files"
        }
      }
    },
    "commands": [
      {
        "command": "vais.run",
        "title": "Run Vais File",
        "category": "Vais"
      },
      {
        "command": "vais.format",
        "title": "Format Vais File",
        "category": "Vais"
      },
      {
        "command": "vais.check",
        "title": "Check Vais File",
        "category": "Vais"
      },
      {
        "command": "vais.repl",
        "title": "Start Vais REPL",
        "category": "Vais"
      },
      {
        "command": "vais.showAst",
        "title": "Show AST",
        "category": "Vais"
      }
    ],
    "keybindings": [
      {
        "command": "vais.run",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorLangId == vais"
      },
      {
        "command": "vais.format",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorLangId == vais"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vais.run",
          "when": "editorLangId == vais",
          "group": "vais@1"
        },
        {
          "command": "vais.format",
          "when": "editorLangId == vais",
          "group": "vais@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  }
}
