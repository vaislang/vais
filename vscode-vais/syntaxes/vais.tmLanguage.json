{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Vais",
  "scopeName": "source.vais",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#async-keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.vais",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.vais",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.vais",
              "match": "\\\\(x[0-9A-Fa-f]{2}|u\\{[0-9A-Fa-f]+\\}|[0nrt\\\\'\"])"
            }
          ]
        },
        {
          "name": "string.quoted.single.vais",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.vais",
              "match": "\\\\(x[0-9A-Fa-f]{2}|u\\{[0-9A-Fa-f]+\\}|[0nrt\\\\'\"])"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vais",
          "match": "\\b(F|S|E|I|L|M|W|T|X|V|C|R|B|N)\\b"
        },
        {
          "name": "keyword.control.flow.vais",
          "match": "\\b(if|else|match|loop|while|for|break|continue|return)\\b"
        },
        {
          "name": "keyword.other.vais",
          "match": "\\b(mut|pub|use|mod|as|in|where|impl|trait|struct|enum|fn|let|const)\\b"
        },
        {
          "name": "storage.modifier.vais",
          "match": "\\b(mut|pub)\\b"
        },
        {
          "name": "keyword.operator.vais",
          "match": "(:=|=>|->|\\?)"
        }
      ]
    },
    "async-keywords": {
      "patterns": [
        {
          "name": "keyword.control.async.vais",
          "match": "\\b(A|async|await)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.numeric.vais",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64)\\b"
        },
        {
          "name": "storage.type.vais",
          "match": "\\b(bool|str|Self)\\b"
        },
        {
          "name": "entity.name.type.vais",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.vais",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.vais",
          "match": "\\b(None|Some)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.vais",
          "match": "\\b0x[0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.vais",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.octal.vais",
          "match": "\\b0o[0-7_]+\\b"
        },
        {
          "name": "constant.numeric.float.vais",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9_]+)?\\b"
        },
        {
          "name": "constant.numeric.decimal.vais",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.self-recursion.vais",
          "match": "@"
        },
        {
          "name": "keyword.operator.comparison.vais",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.logical.vais",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.vais",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.bitwise.vais",
          "match": "(&|\\||\\^|<<|>>)"
        },
        {
          "name": "keyword.operator.assignment.vais",
          "match": "(=|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=)"
        },
        {
          "name": "keyword.operator.access.vais",
          "match": "(\\.)"
        },
        {
          "name": "keyword.operator.reference.vais",
          "match": "(&)"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.vais",
          "match": "\\b[a-z_][a-zA-Z0-9_]*(?=\\s*\\()"
        },
        {
          "name": "support.function.builtin.vais",
          "match": "\\b(puts|putchar|print_i64|malloc|free|strlen)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.vais",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
