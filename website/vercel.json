{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "public": true,
  "regions": ["iad1"],
  "env": [],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/docs",
      "destination": "https://docs.vais-lang.org",
      "permanent": false
    },
    {
      "source": "/playground",
      "destination": "https://play.vais-lang.org",
      "permanent": false
    }
  ]
}
